                        <i class="fas fa-search" aria-hidden="true"></i>
                    </button>
                    <button class="btn btn-primary col-md-1">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>

                <div class="borrow-card">
                    <label for="">Số sách được chọn: </label>
